<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXRadioButton?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ImageView fitHeight="600.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../recursos/fondos/TequilaPhoto1.jpg" />
         </image>
      </ImageView>
      <ImageView disable="true" fitHeight="77.0" fitWidth="281.0" layoutX="260.0" layoutY="110.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../recursos/iconos/TequilaMusic_V1.1.png" />
         </image>
      </ImageView>
      <TextField fx:id="tfUsuario" layoutX="275.0" layoutY="185.0" opacity="0.8" prefHeight="35.0" prefWidth="250.0" promptText="Correo electrónico">
         <font>
            <Font name="Avenir Book" size="16.0" />
         </font>
      </TextField>
      <JFXRadioButton fx:id="rdbtnMusico" layoutX="275.0" layoutY="235.0" selected="true" text="Músico" textFill="#1abc9c">
         <font>
            <Font name="Avenir Book" size="16.0" />
         </font>
         <toggleGroup>
            <ToggleGroup fx:id="tipo" />
         </toggleGroup>
      </JFXRadioButton>
      <JFXRadioButton fx:id="rdbtnCliente" layoutX="375.0" layoutY="235.0" text="Cliente" textFill="#1abc9c" toggleGroup="$tipo">
         <font>
            <Font name="Avenir Book" size="16.0" />
         </font>
      </JFXRadioButton>
      <TextField fx:id="tfNombre" layoutX="275.0" layoutY="285.0" opacity="0.8" prefHeight="35.0" prefWidth="250.0" promptText="Nombre">
         <font>
            <Font name="Avenir Book" size="16.0" />
         </font>
      </TextField>
      <PasswordField fx:id="tfClave" layoutX="275.0" layoutY="335.0" opacity="0.8" prefHeight="36.0" prefWidth="250.0" promptText="Contraseña">
         <font>
            <Font name="Avenir Book" size="16.0" />
         </font>
      </PasswordField>
      <PasswordField fx:id="tfClaveConfirmar" layoutX="275.0" layoutY="385.0" opacity="0.8" prefHeight="36.0" prefWidth="250.0" promptText="Confirmar contraseña">
         <font>
            <Font name="Avenir Book" size="16.0" />
         </font>
      </PasswordField>
      <JFXButton fx:id="btnCrearCuenta" layoutX="275.0" layoutY="435.0" prefHeight="35.0" prefWidth="250.0" style="-fx-background-radius: 30; -fx-border-radius: 30; -fx-background-color: #1ABC9C;" text="UNIRTE A TEQUILA MUSIC" textFill="WHITE">
         <font>
            <Font name="Avenir Black" size="14.0" />
         </font>
      </JFXButton>
      <Hyperlink fx:id="hpIniciarSesion" alignment="CENTER" layoutX="275.0" layoutY="475.0" onAction="#cargarIniciarSesion" prefHeight="32.0" prefWidth="250.0" text="¿Ya tienes cuenta? Inicia sesión" textFill="WHITE" underline="true">
         <font>
            <Font name="Avenir Book" size="16.0" />
         </font>
      </Hyperlink>
   </children>
</AnchorPane>
